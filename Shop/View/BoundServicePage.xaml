<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shop.BoundServicePage"
             Title="BoundServicePage">
    <StackLayout>
        <Button
            Margin="20"
            Text="GetDataFromBoundService"
            Command="{Binding GetDataFromBoundServiceCommand}"/>
        <Label 
                Margin="20,0,20,10"
                Text="Data from Bound Service"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                FontAttributes="Bold"/>
        <Label 
                Text="{Binding DataFromBoundService}"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" 
                HorizontalTextAlignment="Center"/>
    </StackLayout>
</ContentPage>
